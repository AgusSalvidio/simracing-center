<div class="d-flex justify-content-end p-2">
    <legend class="">Bienvenido {{user.email}}! Tu rol es: {{user.role}}</legend>
  </div>
<div class="d-flex justify-content-end p-2">
    <legend class="">Productos</legend>
  </div>
<div class="row">
  {{#each products}}
  <div class="col-lg-3 col-md-6 col-sm-6 d-flex">
    <div class="card w-100 my-2">
      <div class="item-card">
        {{#if this.thumbnails.length}}
        <!--Check thumbnails has []-->
        <img src="{{this.thumbnails.[0]}}" class="card-img-top" />
        {{else}}
        <img
          src="https://www1.rims.org/eWeb/images/DEMO1/notavailable.jpg"
          class="card-img-top"
        />
        {{/if}}
      </div>
      <div class="card-body d-flex flex-column">
        <p class="item-card-text text-justify">{{this.title}}</p>
      </div>
      {{#unless (hasAdminRole ../user.role)}}
      <div class="card-body d-flex flex-column">
        <button
          onclick="addProduct('{{this.id}}','{{../user.cartID}}')"
          class="btn btn-custom shadow-0 me-1 w-100"
        >
          Agregar al carrito
        </button>
      </div>
      {{/unless}}
      <h5 class="card-title p-3 mb-4">${{this.price}}</h5>
    </div>
  </div>
  {{/each}}
</div>

<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    {{#if hasPrevPage}}
    <li class="page-item">
      <a class="page-link" href="products?page={{prevPage}}">Anterior</a>
    </li>
    {{else}}
    <li class="page-item disabled">
      <a class="page-link" href="#" tabindex="-1">Anterior</a>
    </li>
    {{/if}}
    <li class="page-item"><a class="page-link" href="#">{{page}}</a></li>
    {{#if hasNextPage}}
    <li class="page-item">
      <a class="page-link" href="products?page={{nextPage}}">Siguiente</a>
      {{else}}
    </li>

    <li class="page-item disabled">
      <a class="page-link" href="#" tabindex="-1">Siguiente</a>
    </li>
    {{/if}}
  </ul>
</nav>
<script src="/js/products.js"></script>
