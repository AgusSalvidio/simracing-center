<div class="container pt-4">
  <div class="row no-gutters">
    {{#unless errorMessage}} {{#if products.length}}
    <div class="col-12 col-md-8">
      <div class="row pb-2">
        {{#each products}}
        <div class="d-flex align-items-start col-12">
          {{#if this.product.thumbnails.length}}
          <!--Check thumbnails has []-->
          <img src="{{this.product.thumbnails.[0]}}" class="img-thumbnail" />
          {{else}}
          <img
            src="https://www1.rims.org/eWeb/images/DEMO1/notavailable.jpg"
            class="img-thumbnail"
          />
          {{/if}}
          <div class="px-3 py-1">
            <p>
              <strong>{{this.product.title}}</strong>
            </p>
            <p>Cantidad: {{this.quantity}}</p>
            <p>${{this.product.price}}</p>
          </div>
        </div>
        <div class="col-6 col-md-4 col-lg-4 offset-md-4 py-3">
          <button
            onclick="deleteProductFrom('{{../cartID}}', '{{this.product._id}}')"
            class="btn btn-custom shadow-0 me-1 w-100"
          >
            Eliminar
          </button>
        </div>
        <hr />
        {{/each}}
      </div>
      <div class="text-center">
        <button
          onclick="cleanCartIdentifiedBy('{{cartID}}')"
          class="btn btn-custom shadow-0 me-1 w-25"
        >
          Vaciar carrito
        </button>
      </div>
    </div>
    {{else}}
    <div class="container py-5 text-center">
      <img
        src="https://music-center-store.vercel.app/assets/cart-icon-73a87ecf.svg"
      />
      <h2>El carrito está vacío</h2>
    </div>
    {{/if}} {{else}}
    <div class="container py-5 text-center">
      <img
        src="https://static.thenounproject.com/png/331019-200.png"
      />
      <h2>No se encuentra el carrito</h2>
    </div>
    {{/unless}}
  </div>
</div>
<script src="/js/cart.js"></script>
